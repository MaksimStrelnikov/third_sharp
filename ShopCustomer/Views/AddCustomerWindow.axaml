<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:vm="clr-namespace:ShopCustomer.ViewModels"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ShopCustomer.Views.AddCustomerWindow"
        x:DataType="vm:AddCustomerViewModel"
        Title="AddCustomerWindow">
    <StackPanel Margin="10" Spacing="10">

        <TextBlock Text="Введите имя покупателя:"/>
        <TextBox Text="{Binding CustomerName}" Width="200"/>

        <TextBlock Text="Выберите магазин:"/>
        <ComboBox ItemsSource="{Binding Shops}" SelectedItem="{Binding SelectedShop}" Width="200">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <TextBlock Text="Выберите товар:"/>
        <ComboBox ItemsSource="{Binding Products}" SelectedItem="{Binding SelectedProduct}" Width="200">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <Button Content="Добавить" Command="{Binding ConfirmCommand}" HorizontalAlignment="Center"/>

    </StackPanel>

</Window>
