<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:vm="clr-namespace:ShopCustomer.ViewModels"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="150"
        x:Class="ShopCustomer.Views.AddDeliveryServiceWindow"
        x:DataType="vm:AddDeliveryServiceViewModel"
        Title="Добавить службу доставки">
    <StackPanel Margin="10" Spacing="10">

        <TextBlock Text="Название службы доставки:" />
        <TextBox Text="{Binding DeliveryServiceName}" Width="200" />

        <TextBlock Text="Выберите продукт:" />
        <ComboBox ItemsSource="{Binding Products}" SelectedItem="{Binding SelectedProduct}" Width="200">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <TextBlock Text="Выберите магазин:" />
        <ComboBox ItemsSource="{Binding Shops}" SelectedItem="{Binding SelectedShop}" Width="200">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <Button Content="Добавить" Command="{Binding ConfirmCommand}" HorizontalAlignment="Center" />

    </StackPanel>

</Window>