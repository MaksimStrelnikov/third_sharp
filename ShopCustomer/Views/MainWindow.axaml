<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ShopCustomer.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:ShopCustomer.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="800"
        x:Class="ShopCustomer.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Симуляция">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <StackPanel Spacing="8" Margin="10">
        <TextBlock Text="Управление" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
    
        <StackPanel Orientation="Horizontal" Spacing="10">
            <Button Content="Добавить магазин" Command="{Binding OpenAddShopWindowCommand}"/>
            <Button Content="Добавить покупателя" Command="{Binding AddCustomerCommand}" />
            <Button Content="Добавить доставку" Command="{Binding OpenAddDeliveryWindowCommand}" />
            <Button Content="Добавить продукт" Command="{Binding OpenAddProductWindowCommand}" />
        </StackPanel>

        <TextBlock Text="Лог событий:" FontWeight="Bold" Margin="0,20,0,5"/>
        <ListBox ItemsSource="{Binding Log}" Height="200"/>
    </StackPanel>

</Window>
